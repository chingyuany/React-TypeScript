{
  "compilerOptions": {
    "target": "es5", // which type of javascript going to be generated
    "lib": [
      "dom", // refer to the HTMLInputElement type on NewTodo.tsx
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, //you can include plain js files in your project
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true, // all the parameters must have type defined
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx" // which output codes should be generated
  },
  "include": [
    "src"
  ]
}
